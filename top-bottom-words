
#!/usr/bin/env bash
NUM_LINES=$1
FILE=$2



echo "The top "$1" words are"
cat $FILE | tr '[:upper:]' '[:lower:]' | grep -oE '\w+' | sort | uniq -c | sort -nr | head -n $NUM_LINES

echo "The bottom "$1" words are"
cat $FILE | tr '[:upper:]' '[:lower:]' | grep -oE '\w+' | sort | uniq -c | sort -nr | tail -n $NUM_LINES
